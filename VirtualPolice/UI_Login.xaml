<Window x:Class="VirtualPolice.UI_Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bienvenido a Virtual Police" Height="234.043" Width="371.2" ResizeMode="NoResize" Background="#FFE2E2E2" WindowStartupLocation="CenterScreen">
    <Grid>
        <Image Source="Images/Icono.ico" />
        <TextBox x:Name="tb_user" KeyDown="OnKeyDownHandler" HorizontalAlignment="Left" Height="33" Margin="142,43,0,0" TextWrapping="Wrap" Width="190" Text="Usuario" TextChanged="TextBox_TextChanged" FontStyle="Italic" TextDecorations="{x:Null}" TextAlignment="Left" VerticalAlignment="Top" VerticalContentAlignment="Center" FontSize="18" Foreground="#FF8B8B8B" Background="White" MaxLength="8" />
        <PasswordBox x:Name="pass" KeyDown="OnKeyDownHandler" HorizontalAlignment="Left" Margin="142,87,0,0" VerticalAlignment="Top" Width="190" Height="33" FontStyle="Italic" VerticalContentAlignment="Center" Background="White" PasswordChar="●" FontSize="18" Password="qwerty" MaxLength="6" />
        <Button x:Name="b_start" Content="Iniciar sesión" HorizontalAlignment="Left" Margin="241,145,0,0" VerticalAlignment="Top" Width="91" RenderTransformOrigin="-0.104,-0.584" Height="41" Click="login"/>
    </Grid>
</Window>
